<p id="notice"><%= notice %></p>

<h1>Products</h1>

<a href="http://localhost:3000/handsets">Handsets</a>|<a href="http://localhost:3000/prepay">Pre paid cards</a>|<a href="http://localhost:3000/subscription">Subscriptions</a>




<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Model</th>
      <th>Variant</th>
      <th>Price</th>
      <th>Short description</th>
      <th>Long description</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.brand %></td>
        <td><%= product.model %></td>
        <td><%= product.variant %></td>
        <td><%= product.price %></td>
        <td><%= product.short_description %></td>
        <td><%= product.long_description %></td>
        <td><%= product.type_product %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add to the Shopping Bag', product_shopping_carts_path(product), method: :create %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

