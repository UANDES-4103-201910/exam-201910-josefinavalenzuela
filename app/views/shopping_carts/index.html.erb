<h1>Shopping Cart</h1>
<% total = 0 %>

<table>
  <tr>
    <th>Brand</th>
    <th>Model</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
  <% @shopping_carts.each do |sc| %>
    <tr>
      <% total += Product.find(sc.product_id).price %>


      <td><%= Product.find(sc.product_id).brand%></td>
      <td><%= Product.find(sc.product_id).model %></td>
      <td><%= Product.find(sc.product_id).price %></td>

  <% end %>
</table>

<h3> Total: <%=total%></h3>

<%= link_to 'Pay', new_order_path %>